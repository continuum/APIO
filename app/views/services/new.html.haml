%h1= t(:new_service)
= form_for [@organization, @service] do |f|
  - if @service.errors.any?
    #error_explanation
      %h2
        = pluralize(@service.errors.count, "error")
        prohibited this service from being saved:
      %ul
        - @service.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.hidden_field 'organization_id', value: @organization.id
  .field
    = f.label :spec_file
    = f.file_field :spec_file
  .field
    = f.label :public
    = f.check_box :public
  .actions
    = f.submit
