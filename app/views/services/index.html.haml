%p#notice
%h1 Servicios
= form_tag(search_services_path, :method => "get", id: "search-form") do
  = text_field_tag :search, params[:search], placeholder: "BÃºsqueda de Servicios"
  = submit_tag "Buscar"

- if @services.present?
  %table
    %thead
      %tr
        %th Nombre
        %th Organizacion
        %th{:colspan => "3"}
    %tbody
      - @services.each do |s|
        %tr
          %td= link_to s.name, organization_service_service_version_path(s.organization, service_name: s.name,
            version_number: s.last_version_number)
          %td= s.organization.name
  %br
- else
  %p There are no posts containing the term(s)
  = params[:search]
%br
  - if user_signed_in? && current_user.organizations.any?
    = link_to 'Nuevo Servicio', new_organization_service_path(current_user.organizations.first)

-if user_signed_in? && current_user.can_create_schemas?
  %h2 Servicios por aprobar.
  %table
    %thead
      %tr
        %th Nombre
        %th Organizacion
        %th{:colspan => "3"}
    %tbody
      - @pending_services_version.each do |s|
        %tr
          %td= s.service.name
          %td= s.service.organization.name
          %td= link_to 'Revisar', [s.service, s]
