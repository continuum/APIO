.instance-panel
  .container
    .col-md-12{:class => "text-center"}
      %h1
        Directorio de Servicios
      .form-group.col-md-6.container-form
        = form_tag(search_services_path, :method => "get") do
          .inner-addon.left-addon
            %i.glyphicon.glyphicon-search
            %input#search-schema.form-control{:placeholder => "Ingresa nombre de Servicio", :type => "text", :name => "text_search"}/
.container.no-gutter
  .row.no-gutter
    .col-md-12.schema-wrapper.text-left
      - @services.each do |s|
        .box-service
          %h2.title
            = link_to organization_service_service_version_path(s.organization, service_name: s.name, version_number: s.last_version_number) do
              = truncate(s.name, :length => 50)
          .body
            %p
              DescripciÃ³n:
            /= truncate(s.description, :length => 183)
            %h3.organization
              = s.organization.name

%br
  - if user_signed_in? && current_user.organizations.any?
    = link_to 'Nuevo Servicio', new_organization_service_path(current_user.organizations.first)
