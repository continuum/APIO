= form_for @schema, :html => { :multipart => true } do |f|
  - if @schema.errors.any?
    #error_explanation
      %h2
        = pluralize(@schema.errors.count, "error")
        prohibited this schema from being saved:
      %ul
        - @schema.errors.full_messages.each do |message|
          %li= message
  .box-search-schemas
    .container
      .col-md-12{:class => "text-center"}
        .box-new-schema-file
          .box-title
            %span +
            %p Crear Esquema
          .input-group.box-input-file
            %label#label-file.input-group-btn
              %span#select-file.btn.btn-action-red.btn-lg
                Seleccionar Archivo
              %input{:multiple => "", :style => "display: none;", :type => "file"}
            .field
              = f.file_field :spec_file, class: 'form-control', type: 'text', readonly: 'readonly'
            %span#remove-file
              %span.glyphicon.glyphicon-remove{":aria-hidden" => true}
  .container.new-schemas-container
    .row
      .col-md-6
        %h3 Indica nombre para el esquema
        = f.text_field :name, { :class => "form-control input-lg", :placeholder => "Ex. Patente Comercial"}
      .col-md-6
        %h3 Indica CategorÃ­a
        = f.collection_select :schema_category_id, SchemaCategory.all, :id, :name, {:include_blank => false}, {:class => 'form-control input-lg'}
        %br
        .text-right
          = f.submit 'Crear Esquema', class: 'btn btn-action-red btn-lg', role: 'button', type:'submit'

