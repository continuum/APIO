                nombre
          .panel-collapse.collapse
            .panel-body
              .panel-group
                .panel.panel-schema.level-2
                  .panel-heading
                    .panel-title.optional
                      %a{"data-toggle" => "collapse-next"}
                        %span.dot
                        nombre

