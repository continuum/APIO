.title-panel-pages
	.container
		.row
			.col-md-12
				%h1 Convenios Ministerio Secretaría General de la Presidencia
		.row
			.col-md-12
				%ul.nav.nav-tabs{:role => "tablist"}
					%li.active{:role => "presentation"}
						%a{"aria-controls" => "proveedor", "data-toggle" => "tab", :href => "#proveedor", :role => "tab"} Proveedor
					%li{:role => "presentation"}
						%a{"aria-controls" => "consumidor", "data-toggle" => "tab", :href => "#consumidor", :role => "tab"} Consumidor
					%li{:role => "presentation", :class => "tab-to-new"}
						%a{:href => 'new', :title => 'Crear Nuevo Convenio'}
							%i.material-icons
								note_add
							%span Crear Nuevo Convenio	
				
.content-tabs
	.container
		.tab-content
			#proveedor.tab-pane.active{:role => "tabpanel"}
				.row
					.col-md-12.head-title-table
						%h2 Listado de convenios
						.search-table
							%input{:type => 'text', :placeholder => 'Buscar por nombre'}
							%button.search
								%i.material-icons
									search
				.row
					.col-md-12
						%table
							%thead
								%tr
									%th Institución solicitante
									%th Servicios involucrados
									%th Propósito
									%th Fecha ult. movimiento
									%th Estado
							%tbody
								%colgroup
									%col{:width => "15%"}
									%col{:width => "22%"}
									%col
									%col{:width => "12%"}
									%col{:width => "8%"}
								- (1..6).each do |i|
									= render partial: "content_table"
			#consumidor.tab-pane{:role => "tabpanel"}
				.row
					.col-md-12.head-title-table
						%h2 Listado de convenios
						.search-table
							%input{:type => 'text', :placeholder => 'Buscar por nombre'}
							%button.search
								%i.material-icons
									search
				.row
					.col-md-12
						%table
							%thead
								%tr
									%th Institución proveedora
									%th Servicios involucrados
									%th Propósito
									%th Fecha ult. movimiento
									%th Estado
							%tbody
								%colgroup
									%col{:width => "15%"}
									%col{:width => "22%"}
									%col
									%col{:width => "12%"}
									%col{:width => "8%"}
								- (1..6).each do |i|
									= render partial: "content_table"